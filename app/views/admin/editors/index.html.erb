  }

  .admin-header h1 {
    font-size: 1.875rem;
    font-weight: 700;
    margin: 0;
    color: #111827;
  }

  .editors-list {
    background: white;
    border-radius: 0.5rem;
    border: 1px solid #e5e7eb;
