<% content_for :title, "Gestion des Éditeurs - Administration Fast Track" %>

<div class="admin-header">
  <h1>Gestion des Éditeurs</h1>
  <%= link_to "Nouvel Éditeur", new_admin_editor_path, class: "btn btn-primary" %>
</div>

<div class="editors-list">
  <% if @editors.any? %>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Nom</th>
            <th>Callback URL</th>
            <th>Statut</th>
            <th>OAuth App</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @editors.each do |editor| %>
            <tr>
              <td>
                <strong><%= editor.name %></strong>
              </td>
              <td>
                <%= link_to editor.callback_url, editor.callback_url, target: "_blank", class: "external-link" %>
              </td>
              <td>
                <% if editor.authorized_and_active? %>
                  <span class="badge badge-success">✅ Actif</span>
                <% elsif editor.authorized? %>
                  <span class="badge badge-warning">⚠️ Autorisé</span>
                <% else %>
                  <span class="badge badge-danger">❌ Inactif</span>
                <% end %>
              </td>
              <td>
                <% if editor.doorkeeper_application %>
                  <span class="badge badge-success">✅ Configurée</span>
                  <br>
                  <small class="text-muted">
                    Client ID: <code><%= editor.client_id %></code>
                  </small>
                <% else %>
                  <span class="badge badge-warning">⚠️ Manquante</span>
                <% end %>
              </td>
              <td>
                <div class="action-buttons">
                  <%= link_to "Voir", admin_editor_path(editor), class: "btn btn-sm btn-outline-primary" %>
                  <%= link_to "Modifier", edit_admin_editor_path(editor), class: "btn btn-sm btn-outline-secondary" %>
                  <% unless editor.doorkeeper_application %>
                    <%= link_to "Sync OAuth", sync_doorkeeper_admin_editor_path(editor), 
                        method: :patch, class: "btn btn-sm btn-outline-success" %>
                  <% end %>
                  <%= link_to "Supprimer", admin_editor_path(editor), 
                      method: :delete, 
                      class: "btn btn-sm btn-outline-danger",
                      data: { 
                        confirm: "Êtes-vous sûr de vouloir supprimer cet éditeur ?" 
                      } %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="empty-state">
      <h3>Aucun éditeur configuré</h3>
      <p>Créez votre premier éditeur pour commencer à tester Fast Track.</p>
      <%= link_to "Créer un éditeur", new_admin_editor_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

