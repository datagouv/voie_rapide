<% content_for :title, "Applications OAuth" %>

<div class="page-header">
  <h2>Applications OAuth</h2>
  <p class="subtitle">Gérez les applications OAuth2 pour l'intégration avec les éditeurs</p>
</div>

<div class="actions-section">
  <%= link_to "Nouvelle Application", new_oauth_application_path, class: "btn btn-primary" %>
</div>

<div class="applications-section">
  <% if @applications.any? %>
    <div class="table-responsive">
      <table class="data-table">
        <thead>
          <tr>
            <th>Nom</th>
            <th>URL de callback</th>
            <th>Type</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @applications.each do |application| %>
            <tr id="application_<%= application.id %>">
              <td>
                <strong><%= link_to application.name, oauth_application_path(application), class: "app-link" %></strong>
              </td>
              <td>
                <code class="redirect-uri"><%= application.redirect_uri %></code>
              </td>
              <td>
                <span class="badge <%= application.confidential? ? 'badge-success' : 'badge-warning' %>">
                  <%= application.confidential? ? "Confidentielle" : "Publique" %>
                </span>
              </td>
              <td>
                <div class="action-buttons">
                  <%= link_to "Modifier", edit_oauth_application_path(application), class: "btn btn-sm btn-outline-primary" %>
                  <%= render 'delete_form', application: application %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="empty-state">
      <p>Aucune application OAuth configurée.</p>
      <p>Les applications OAuth permettent aux éditeurs de s'intégrer avec Fast Track.</p>
    </div>
  <% end %>
</div>

